# ------------------------------
# Stage 1: Build React
# ------------------------------
FROM node:20 AS build

WORKDIR /app

# Copy package trước để tối ưu cache
COPY package.json package-lock.json ./

RUN npm install

# Copy toàn bộ source
COPY . .

# Build production
RUN npm run build


# ------------------------------
# Stage 2: Nginx serve static files
# ------------------------------
FROM nginx:alpine

# Xóa default Nginx config
RUN rm /etc/nginx/conf.d/default.conf

# Copy file build sang Nginx
COPY --from=build /app/dist /usr/share/nginx/html

# Thêm config rewrite cho SPA React (optional)
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
